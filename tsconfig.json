{
  "extends": "./playground/.nuxt/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts",
    "vitest.config.ts" // Wichtig, falls die Konfiguration im Root liegt
  ],
  "exclude": [
    "node_modules",
    "dist" // Die gebuildeten Dateien ausschlie√üen
  ]
}
